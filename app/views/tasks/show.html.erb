<h2> <%= @task.title %> </h2>
<p> <%= @task.details %> </p>
<p> <%= @task.completed %> </p>

<%= link_to "Edit task 📝",
  task_edit_path(@task)
%>

<%= link_to "Delete task 🚮",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "See all tasks 🔎",
  tasks_path
%>
